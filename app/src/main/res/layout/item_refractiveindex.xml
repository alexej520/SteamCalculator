<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="ru.lextop.steamcalculator.vm.RefractiveIndexViewModel" />

        <import
            alias="V"
            type="android.view.View" />

        <import
            alias="U"
            type="ru.lextop.steamcalculator.binding.BindingAdaptersKt" />

        <variable
            name="refractiveIndex"
            type="ru.lextop.steamcalculator.model.QuantityWrapper" />

        <variable
            name="vm"
            type="ru.lextop.steamcalculator.vm.RefractiveIndexViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="@{U.getSpanned(context, refractiveIndex.nameRes)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:visibility="@{vm.isQuantityNameVisibleLive ? V.VISIBLE : V.GONE}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:paddingBottom="@{U.sp(context, @dimen/abc_text_size_subhead_material * 0.25f)}"
                    android:paddingTop="@{U.sp(context, @dimen/abc_text_size_subhead_material * 0.25f)}"
                    android:text="@{U.getSpanned(context, refractiveIndex.symbolRes)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onItemSelected="@{(a,b,c,id) -> vm.selectWavelengthUnit((int) id)}"
                    android:selectedItemPosition="@{vm.wavelengthUnitSelectionLive}" />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/item_quantity" bind:vm="@{vm}"/>
    </LinearLayout>
</layout>