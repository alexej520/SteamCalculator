<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="text"
            type="String"/>
        <variable
            name="onYes"
            type="android.view.View.OnClickListener"/>
        <variable
            name="onNo"
            type="android.view.View.OnClickListener"/>
    </data>
    <RelativeLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
            android:singleLine="true"
            android:text="@{text}"
            android:selected="@{true}"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:id="@+id/yesno_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/yesno_yes"
            android:layout_toStartOf="@+id/yesno_no"
            tools:text="Do you like Steam Calculator?"
            />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:onClickListener="@{onNo}"
            android:text="@string/rateViewNo"
            android:id="@+id/yesno_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/yesno_yes"
            android:layout_alignBaseline="@id/yesno_yes"/>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:onClickListener="@{onYes}"
            android:text="@string/rateViewYes"
            android:id="@+id/yesno_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</layout>